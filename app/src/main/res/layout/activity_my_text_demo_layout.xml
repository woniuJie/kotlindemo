<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/icon_maoboli">

    <Button
        android:id="@+id/button_xxxx"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="点击"
        />

    <Button
        android:id="@+id/button_xxxx_reset"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/button_xxxx"
        android:text="点击还原"
        />

    <com.example.kotlindemo.textview.CommunityProgressTextView
        android:id="@+id/tv_mu_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="180dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:text="阿迪上看风景啊还得上课就发哈空间的护肤科技啊多少分"
        app:layout_constraintTop_toTopOf="parent"
        />


    <com.example.kotlindemo.textview.JianBianTextView
        android:id="@+id/jianbian_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="打蜡的风景阿道夫"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_mu_text"
        />

    <com.example.kotlindemo.textview.MyXformodeView
        android:id="@+id/xformode_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/jianbian_view"
        android:layout_marginTop="20dp"
        />

    <com.example.kotlindemo.textview.HomeMulitplyBlurTextView
        android:id="@+id/tv_blur"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="我是张士杰"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/xformode_1"
        android:layout_marginTop="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>