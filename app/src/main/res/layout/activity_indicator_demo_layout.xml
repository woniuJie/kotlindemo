<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.kotlindemo.indicator.PostVideoHotIndicatorView
        android:id="@+id/indicator_video_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <Button
        android:id="@+id/btn_move_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="向上移动"
        />


    <Button
        android:id="@+id/btn_move_down"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="向下移动"
        />

    <Button
        android:id="@+id/btn_move_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="下一个榜单"
        />

    <Button
        android:id="@+id/btn_move_shangyige"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="上一个榜单"
        />



</LinearLayout>